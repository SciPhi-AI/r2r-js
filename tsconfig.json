{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*", "__tests__/**/*"]
}
